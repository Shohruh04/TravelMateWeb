{
  "name": "travelmate-backend",
  "version": "1.0.0",
  "description": "TravelMate Backend API - Travel information platform",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "db:generate": "bunx prisma generate",
